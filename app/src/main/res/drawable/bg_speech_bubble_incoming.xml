<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layers-->

    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4"/>
                <padding
                    android:bottom="@dimen/px_1"
                    android:left="@dimen/px_1"
                    android:right="@dimen/px_1"/>
                <solid android:color="@color/tyrianPurpleLight" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/dp_8">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/px_1"
                android:left="@dimen/px_1"
                android:right="@dimen/px_1"/>
            <solid android:color="@color/tyrianPurpleLight" />
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>

    <!--===============-->
    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4"/>
                <padding
                    android:bottom="@dimen/px_1" />
                <solid android:color="@color/tyrianPurpleDark" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/dp_8">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/px_1" />
            <solid android:color="@color/tyrianPurpleDark" />
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>

    <!--===============-->

    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4"/>
                <padding
                    android:bottom="@dimen/px_1"
                    android:left="@dimen/px_1"
                    android:right="@dimen/px_1"/>
                <solid android:color="@color/tyrianPurpleLight" />
            </shape>
        </rotate>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/px_1"
                android:left="@dimen/px_1"
                android:right="@dimen/px_1"/>
            <solid android:color="@color/tyrianPurpleLight" />
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>

    <!--ForeGround-->

    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4"/>
                <solid android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/dp_8">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>

</layer-list>
